<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="tiles" template="/jsp/layout.jsp">
		<put-attribute name="top" value="/module/top.jsp"></put-attribute>
		<put-attribute name="middle" value=""></put-attribute>
		<put-attribute name="bottom" value="/module/bottom.jsp"></put-attribute>
	</definition>
	<definition name="*.*.tiles" extends="tiles">
		<put-attribute name="middle" value="/jsp/{1}.jsp"></put-attribute>
	</definition>
</tiles-definitions>