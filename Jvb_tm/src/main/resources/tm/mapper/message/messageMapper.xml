<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tm.message.dao.IMessageDao">

<insert id="insertMessage" parameterType="messageVo">
insert into message values(0, #{msg_send_userid}, #{msg_receive_userid}, #{msg_contents}, sysdate())
</insert>

<delete id="deleteMessage" parameterType="int">
	delete from message where msg_idx=#{msg_idx} 
</delete>

<select id="selectMessageByUserid" parameterType="String" resultType="messageVo">
	select *from message where msg_send_userid=#{msg_userid} or msg_receive_userid=#{msg_userid}
</select>
</mapper>